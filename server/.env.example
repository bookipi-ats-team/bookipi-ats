NODE_ENV=development
PORT=3000
MONGODB_URI=mongodb://127.0.0.1:27017

# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key
MODEL=gpt-4o-mini

# File upload
MAX_RESUME_FILE_SIZE_BYTES=15728640
ALLOWED_RESUME_MIME_TYPES=application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document

# Google Drive
# Encode credentials.json as base64: cat credentials.json | base64
GOOGLE_DRIVE_CREDENTIALS_BASE64=base64-encoded-service-account-json
GOOGLE_DRIVE_FOLDER_ID=google-drive-folder-id
# Optional: Workspace user to impersonate when using domain-wide delegation
GOOGLE_DRIVE_IMPERSONATED_USER=
